{
  "name": "vocabulary-v2",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npx kill-port 3100 && next dev -p 3100",
    "dev:open": "node scripts/dev-with-browser.js",
    "dev:emulators": "concurrently \"npm run emulators\" \"npm run dev\"",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "create-test-admin": "tsx scripts/create-test-admin.ts",
    "emulators": "firebase emulators:start --only auth,firestore,functions,storage",
    "emulators:ui": "firebase emulators:start",
    "emulators:export": "firebase emulators:export ./emulator-data",
    "emulators:import": "firebase emulators:start --import ./emulator-data",
    "firebase:login": "firebase login",
    "firebase:init": "firebase init",
    "firebase:deploy": "firebase deploy",
    "type-check": "tsc --noEmit",
    "migrate:dry": "ts-node --project tsconfig.node.json src/lib/vocabulary-v2/migration-script.ts",
    "migrate:execute": "ts-node --project tsconfig.node.json src/lib/vocabulary-v2/migration-script.ts --execute",
    "db:check": "node src/lib/vocabulary-v2/integrity-check.js",
    "db:count": "node src/lib/vocabulary-v2/count-unique-words.js",
    "db:cleanup": "node src/lib/vocabulary-v2/remove-duplicates.js",
    "db:cleanup:execute": "node src/lib/vocabulary-v2/remove-duplicates.js --execute",
    "seed:emulator": "ts-node --project tsconfig.node.json src/lib/vocabulary-v2/scripts/seed-emulator.ts"
  },
  "dependencies": {
    "@google-cloud/vision": "^5.3.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "firebase": "^10.14.1",
    "firebase-admin": "^13.4.0",
    "firebase-tools": "^14.6.0",
    "lru-cache": "^11.1.0",
    "lucide-react": "^0.533.0",
    "next": "15.3.3",
    "next-pwa": "^5.6.0",
    "openai": "^5.10.2",
    "pdfjs-dist": "^4.8.69",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "dotenv": "^17.2.1",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "open": "^10.2.0",
    "playwright": "^1.54.1",
    "postcss": "^8.5.6",
    "sharp": "^0.34.3",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5"
  }
}
